resource "azurerm_resource_group" "testgroup" {
  name     = "test-resources"
  location = "centralindia"
}

resource "azurerm_virtual_network" "testgroup" {
  name                = "testgroup-network"
  address_space       = ["10.0.0.0/16"]
  location            = azurerm_resource_group.testgroup.location
  resource_group_name = azurerm_resource_group.testgroup.name
}

resource "azurerm_subnet" "testgroup" {
  name                 = "internal"
  resource_group_name  = azurerm_resource_group.testgroup.name
  virtual_network_name = azurerm_virtual_network.testgroup.name
  address_prefixes     = ["10.40.2.0/24"]
}

resource "azurerm_network_interface" "testgroup" {
  name                = "testgroup-nic"
  location            = azurerm_resource_group.testgroup.location
  resource_group_name = azurerm_resource_group.testgroup.name

  ip_configuration {
    name                          = "internal"
    subnet_id                     = azurerm_subnet.testgroup.id
    private_ip_address_allocation = "Dynamic"
  }
}

resource "azurerm_linux_virtual_machine" "testgroup" {
  name                = "testgroup-machine"
  resource_group_name = azurerm_resource_group.testgroup.name
  location            = azurerm_resource_group.testgroup.location
  size                = "Standard_F2"
  admin_username      = "devadmin"
  network_interface_ids = [
    azurerm_network_interface.testgroup.id,
  ]

  admin_ssh_key {
    username   = "adminuser"
    public_key = file("~/.ssh/id_rsa.pub")
  }

  os_disk {
    caching              = "ReadWrite"
    storage_account_type = "Standard_LRS"
  }

  source_image_reference {
    publisher = "Canonical"
    offer     = "0001-com-ubuntu-server-focal"
    sku       = "22_04-lts"
    version   = "latest"
  }
}
